[diff]
    tool = vimdiff
[user]
    useconfigonly = true
[core]
    excludesfile = ~/.dotfiles/git/.gitignore
    hookspath = ~/.dotfiles/git/hooks
    editor = vim
    ignorecase = false
[branch]
    autosetupmerge = always
[push]
    default = current
[pull]
    rebase = true
[alias]
    ci = commit --verbose
    amend = commit --amend
    aa = add --all
